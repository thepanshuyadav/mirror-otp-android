<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.PermissionsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Grant Permissions"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/blue_700"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1. Read SMS Permission: To Read OTP"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:id="@+id/smsPermissionButton"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            app:cornerRadius="32dp"
            android:backgroundTint="@color/blue_200"
            app:elevation="8dp"
            android:textColor="@color/black"
            android:text="Give"
            android:drawableTint="@color/black"
            android:layout_height="60dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="8dp"
            android:text="2. Camera Permission: To add new devices"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:id="@+id/cameraPermissionButton"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            app:cornerRadius="32dp"
            android:backgroundTint="@color/blue_200"
            app:elevation="8dp"
            android:textColor="@color/black"
            android:text="Give"
            android:drawableTint="@color/black"
            android:layout_height="60dp"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:id="@+id/continueButton"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        app:cornerRadius="32dp"
        android:backgroundTint="@color/yellow_500"
        app:elevation="8dp"
        android:textColor="@color/black"
        android:text="Continue"
        android:drawableEnd="@drawable/ic_round_arrow_forward"
        android:drawableTint="@color/black"
        android:layout_height="60dp"/>

</FrameLayout>